<schemalist gettext-domain="gnome-shell-extensions">
  <schema id="org.gnome.shell.extensions.rclone-manager"
      path="/org/gnome/shell/extensions/rclone-manager/">

    <key name="rconfig-file-path" type="s">
      <default>'~/.config/rclone/rclone.conf'</default>
        <summary>Rclone configuration file path</summary>
        <description>
            Rclone configuration file path
        </description>
    </key>

    <key name="base-mount-path" type="s">
      <default>'~/'</default>
        <summary>Path where the remote disks are mounted</summary>
        <description>
            Path where the remote disks are mounted
        </description>
    </key>

    <key name="ignore-patterns" type="s">
      <default>'.remmina.,~lock,.tmp,.log'</default>
        <summary>Filenames to be ignored</summary>
        <description>
            Comma separed filenames to be ignored by inotify
        </description>
    </key>

    <key name="external-terminal" type="s">
      <default>'gnome-terminal --window -- '</default>
        <summary>Command to call a new terminal window</summary>
        <description>
            Command to call a new terminal window in order to perform rclone manager actions
        </description>
    </key>

    <key name="external-file-browser" type="s">
      <default>'nautilus'</default>
        <summary>Command to call a new file browser window</summary>
        <description>
            Command to call a new file browser window in order to explore configuration folders
        </description>
    </key>

    <!-- <key name="external-text-editor" type="s">
      <default>'gedit'</default>
        <summary>Command to call a new text editor window</summary>
        <description>
            Command to call a new text editor window in order to manually edit the rclone configuration file
        </description>
    </key> -->

    <!-- <key name="mount-flags" type="s">
      <default>'- -file-perms 0777 - -allow-non-empty - -allow-other - -write-back-cache - -no-modtime'</default>
        <summary>Optional mount flags</summary>
        <description>
            Optional flags to be passed to "rclone mount" command
        </description>
    </key> -->

    <key name="autosync" type="b">
      <default>true</default>
        <summary>Sync files on start</summary>
        <description>
            If is on will execute 'rclone sync' on start watching a profile
        </description>
    </key>

    <key name="rclone-listremotes" type="s">
      <default>'rclone listremotes'</default>
        <summary>List remotes command</summary>
        <description>Command to list remotes</description>
    </key>

    <key name="rclone-copy" type="s">
      <default>'rclone copy %source %profile:%destination --create-empty-src-dirs'</default>
        <summary>Create command</summary>
        <description>Create command</description>
    </key>

    <key name="rclone-purge" type="s">
      <default>'rclone purge %profile:%destination --ignore-errors'</default>
        <summary>Delete dir command</summary>
        <description>Delete dir command</description>
    </key>

    <key name="rclone-delete" type="s">
      <default>'rclone delete %profile:%destination --ignore-errors'</default>
        <summary>Delete file command</summary>
        <description>Delete file command</description>
    </key>

    <key name="rclone-mount" type="s">
      <default>'rclone mount %profile: %source --volname %profile --file-perms 0777 --allow-other --write-back-cache --no-modtime'</default>
        <summary>Mount command</summary>
        <description>Mount command</description>
    </key>

    <key name="rclone-sync" type="s">
      <default>'rclone sync %profile: %source --create-empty-src-dirs'</default>
        <summary>Sync command</summary>
        <description>Sync command </description>
    </key>

    <key name="rclone-copyto" type="s">
      <default>'rclone copyto %profile:%destination %source'</default>
        <summary>Copy file command</summary>
        <description>Copy file command</description>
    </key>

    <key name="rclone-config" type="s">
      <default>'rclone config'</default>
        <summary>Add config command</summary>
        <description>Add config command</description>
    </key>

    <key name="rclone-config-delete" type="s">
      <default>'rclone config delete %profile'</default>
        <summary>Delete config command</summary>
        <description>Delete config command</description>
    </key>

    <key name="rclone-config-reconnect" type="s">
      <default>'rclone config reconnect %profile:'</default>
        <summary>Reconnect config command</summary>
        <description>Reconnect config command</description>
    </key>

    <key name="umount-source" type="s">
      <default>'umount %source'</default>
        <summary>Umount command</summary>
        <description>Umount command</description>
    </key>

    <key name="mount" type="s">
      <default>'mount'</default>
        <summary>Get mounts command</summary>
        <description>Get mounts command</description>
    </key>

  </schema>
</schemalist>
